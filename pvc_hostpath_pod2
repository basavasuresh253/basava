apiVersion: v1
kind: Pod
metadata:
  name: pvc-pod2
spec:
  volumes:
    - name: task-pv-storage
      persistentVolumeClaim:
        claimName: my-pvc
  containers:
    - name: task-pv-container
      image: nginx
      ports:
        - containerPort: 80
          name: "http-server"
      volumeMounts:
        - mountPath: "/mnt/readonly/nginx/html"
          name: my-pvc
